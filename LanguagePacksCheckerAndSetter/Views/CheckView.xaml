<UserControl x:Class="LanguagePacksCheckerAndSetter.Views.CheckView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LanguagePacksCheckerAndSetter.Views"
             xmlns:vm="clr-namespace:LanguagePacksCheckerAndSetter.ViewModels"
             mc:Ignorable="d">

    <UserControl.DataContext>
        <vm:CheckViewModel/>
    </UserControl.DataContext>

    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Enter or select a language code: "/>
            <ComboBox IsEditable="True"
                      Width="200"
                      Margin="0,5,0,10"
                      ItemsSource="{Binding SupportedLanguages}"
                      Text="{Binding SelectedLanguageCode, UpdateSourceTrigger=PropertyChanged}"/>
            <Button Content="Check Installed Packages"
                    Command="{Binding CheckCommand}"
                    Width="200"/>
            <Label Content="Found Packages: "/>
            <ListBox ItemsSource="{Binding InstalledPackages}"
                     DisplayMemberPath="PackageIdentity"
                     Height="200"
                     Margin="0,10,0,0"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"/>

            <TextBlock Text="Log:" FontWeight="Bold" Margin="0,10,0,0"/>
            <ListBox x:Name="LogList"
                     ItemsSource="{Binding OperationLog}"
                     Height="150"
                     Margin="0,5,0,0">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Message}" Foreground="{Binding Foreground}" TextWrapping="Wrap"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
    </Grid>
</UserControl>
